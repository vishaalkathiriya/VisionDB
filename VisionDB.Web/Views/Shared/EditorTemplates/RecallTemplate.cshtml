@model VisionDB.Models.RecallDocumentViewModel

<table>
    <tr>
        <td height="50px">&nbsp;&nbsp;&nbsp;</td>
        <td>Template</td>
        <td>
            @(Html.Kendo().DropDownListFor(r => r.documentTemplate)
                .DataValueField("Id")
                .DataTextField("Name")
                .Value(Model.documentTemplate != null ? Model.documentTemplate : "")
                .DataSource(source =>
                {
                    source.Read(read =>
                    {
                        read.Action("GetTemplates", "DocumentTemplates");
                    })
                    .ServerFiltering(true);
                })
                .HtmlAttributes(new { style = "width:270px" })
            )
        </td>
    </tr>
    <tr>
        <td height="50px"></td>
        <td><div id="price-label">When to send</div></td>
        <td>
            @Html.Kendo().NumericTextBoxFor(r => r.DateSpanValue).Value(1).Min(1).Step(1).Format("0").HtmlAttributes(new { @class = "kendo-numeric-small" })
            @(Html.Kendo().DropDownList()
              .Name("DateSpanUnit")
              .DataTextField("Text")
              .DataValueField("Value")
              .BindTo(new List<SelectListItem>() {
                  new SelectListItem() {
                      Text = "Days",
                      Value = "1"
                  },
                  new SelectListItem() {
                      Text = "Months",
                      Value = "2"
                  },
                  new SelectListItem() {
                      Text = "Years",
                      Value = "3"
                  }
              })
              .Value(Model.BeforeOrAfterEnum.ToString())
            )
            @(Html.Kendo().DropDownList()
              .Name("BeforeOrAfterEnum")
              .DataTextField("Text")
              .DataValueField("Value")
              .BindTo(new List<SelectListItem>() {
                  new SelectListItem() {
                      Text = "After",
                      Value = "1"
                  },
                  new SelectListItem() {
                      Text = "Before",
                      Value = "2"
                  }
              })
              .Value(Model.BeforeOrAfterEnum.ToString())
            )
        </td>
    </tr>
    <tr>
        <td></td>
        <td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
        <td></td>
    </tr>
</table>